<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pai_xu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="atguigu.com.liangcangduanzi.activity.PaiXuActivity">

    <LinearLayout
        android:background="#663333"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000"
            >

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/title_search"
                android:id="@+id/search"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:text="达人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_back"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/abc_ic_clear_mtrl_alpha"
                android:layout_width="27dp"
                android:layout_height="27dp" />

        </RelativeLayout>


            <TextView
                android:textSize="25dp"
                android:layout_margin="20dp"
                android:id="@+id/tv_moren"
                android:text="默认推荐"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:id="@+id/tv_tuijian_more"
            android:text="最多推荐"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:id="@+id/tv_huanying"
            android:text="最受欢迎"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:id="@+id/tv_tuijian_new"
            android:text="最新推荐"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:id="@+id/tv_in_new"
            android:text="最新加入"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:id="@+id/ll_null"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>




</LinearLayout>
