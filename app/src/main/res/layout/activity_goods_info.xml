<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="atguigu.com.liangcangduanzi.activity.GoodsInfoActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#202020"
            android:orientation="vertical">

            //改为banner
            <com.youth.banner.Banner
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_present_7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/banner" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品的名称"
                        android:textColor="#ffffff"
                        android:textSize="30dp" />

                    <TextView
                        android:lineSpacingExtra="10dp"
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="商品名称详细版"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/like_big"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView

                        android:id="@+id/like_acount"
                        android:layout_below="@id/iv_like"
                        android:textColor="#4F94CD"
                        android:textSize="25dp"
                        android:text="88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/ic_share_liangcang"
                        android:layout_below="@id/like_acount"
                        android:id="@+id/tv_fenxiang"
                        android:layout_alignParentRight="true"
                        android:textColor="#4F94CD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_money"
                android:textSize="35dp"
                android:textColor="#4F94CD"
                android:text="￥999"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:background="#4F94CD"
                    android:src="@drawable/ic_free_shiptip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:textColor="#ffffff"
                    android:text="免运费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView

                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#4F94CD"
                    android:src="@drawable/ic_real_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#ffffff"
                    android:text="正品授权"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#4F94CD"
                    android:src="@drawable/ic_pre_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#ffffff"
                    android:text="现货商品3天发货"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:background="#5f5f5f"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:id="@+id/ll_goods_select"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_size_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="  选择  尺码  颜色 数量"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_order_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:background="#5f5f5f"
                android:id="@+id/ll_product"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/product_image"
                   android:src="@drawable/msg_num_bg1"
                   android:layout_width="50dp"
                   android:layout_height="50dp" />

                <TextView
                    android:id="@+id/product_brandName"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="哒哒哒"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_order_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

               <RadioGroup
                   android:layout_marginLeft="10dp"
                   android:id="@+id/rg_main"
                   android:layout_marginTop="20dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <RadioButton

                       android:id="@+id/rb_good_xiangqing"
                       android:textSize="20dp"
                       android:button="@null"
                       android:gravity="center"
                       android:text="商品详情"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content" />

                   <RadioButton
                       android:id="@+id/rb_gouwuxuzhi"
                       android:textSize="20dp"
                       android:button="@null"
                       android:gravity="center"
                       android:text="购物须知"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content" />

               </RadioGroup>

                <FrameLayout

                    android:background="#000000"
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back_gray" />

        <ImageView
            android:id="@+id/shoppingCar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_cart_gray" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#104E8B"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_kefu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_customer_service_bottom" />

        <TextView
            android:id="@+id/tv_addcar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#1874CD"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_toby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#63B8FF"
            android:gravity="center"
            android:text="直接购买"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </LinearLayout>

</RelativeLayout>
