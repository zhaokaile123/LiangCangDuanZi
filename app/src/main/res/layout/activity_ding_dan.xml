<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ding_dan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="atguigu.com.liangcangduanzi.activity.DingDanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="50dp"
        android:background="#5e5e5e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#5e5e5e"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_add_address_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="管理收获地址"
                    android:textColor="#c0c0c0"
                    android:textSize="20dp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000" />

            <LinearLayout
                android:id="@+id/ll_xiangqing"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#5e5e5e"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/daren_selected" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="18dp"
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="dadadadda"
                        android:textColor="#ffffff" />

                    <TextView
                        android:textSize="18dp"
                        android:id="@+id/tv_shulaing"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="dadadadda"
                        android:textColor="#c0c0c0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_price"
                            android:textSize="18dp"
                            android:textColor="#0000cd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$99"
                            />

                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="x"
                            android:textColor="#ffffff" />

                        <TextView
                            android:textSize="18dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/tv_accout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="1"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000" />

            <LinearLayout
                android:orientation="vertical"
                android:background="#5e5e5e"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/youhuiquan"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="#ffffff"
                        android:text="使用代金券/红包"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_down_clickable"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>

                <View

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C0C0C0" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/beizhu"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="#ffffff"
                        android:text="填写备注"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_down_clickable"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000" />

            <LinearLayout
                android:orientation="vertical"
                android:background="#5e5e5e"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:text="商品原价"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_price_all"
                        android:textSize="18dp"
                        android:textColor="#0000cd"
                        android:text="9999"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:text="满减/折扣"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:id="@+id/tv_discount"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:text="-￥0.00"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:text="代金券/红包"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:text="-￥0.00"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:text="商品原价"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:text="+￥0.00"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000" />

            <LinearLayout
                android:id="@+id/ll_pay"
                android:background="#5e5e5e"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:text="支付方式"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/down"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_down_clickable"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_selector_pay"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C0C0C0" />

                <LinearLayout
                    android:id="@+id/wxpay"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:src="@drawable/wxpay_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:text="微信支付"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageButton

                        android:id="@+id/ib_wxpay"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_payway_unselected"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C0C0C0" />

                <LinearLayout
                    android:id="@+id/alipay"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:src="@drawable/alipay_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:text="支付宝支付"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/ib_alipay"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_payway_unselected"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#104E8B"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/price_total"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="总计：￥180.00"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price_discount"
                android:textSize="13dp"
                android:text="已节省：￥0"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#63B8FF"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </LinearLayout>

</RelativeLayout>
